<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brapeba.roaminginfo"
    android:versionCode="22"
    android:versionName="2.7" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="20" 
        />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        <activity
            android:name="com.brapeba.roaminginfo.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.brapeba.roaminginfo.ShutDown"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.brapeba.roaminginfo.ShutDataNot"
            android:label="@string/app_name" >
        </activity>

        <service android:name=".RoamingInfoService" 
            	 android:process=":service" />

        <receiver android:name="ConnectivityChangeReceiver"
            	  android:process=":service">
            <intent-filter>
                <action android:name="android.intent.action.SERVICE_STATE" 
                    	android:enabled="false"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>